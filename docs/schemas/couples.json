{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Couples Analyzer Output",
  "description": "JSON schema for the couples analyzer ComputedMetrics output",
  "type": "object",
  "properties": {
    "aggregate": {
      "$ref": "#/definitions/AggregateData"
    },
    "developer_coupling": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DeveloperCouplingData"
      }
    },
    "file_coupling": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FileCouplingData"
      }
    },
    "file_ownership": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FileOwnershipData"
      }
    }
  },
  "required": [
    "file_coupling",
    "developer_coupling",
    "file_ownership",
    "aggregate"
  ],
  "definitions": {
    "AggregateData": {
      "type": "object",
      "properties": {
        "avg_coupling_strength": {
          "type": "number"
        },
        "highly_coupled_pairs": {
          "type": "integer"
        },
        "total_co_changes": {
          "type": "integer"
        },
        "total_developers": {
          "type": "integer"
        },
        "total_files": {
          "type": "integer"
        }
      },
      "required": [
        "total_files",
        "total_developers",
        "total_co_changes",
        "avg_coupling_strength",
        "highly_coupled_pairs"
      ]
    },
    "DeveloperCouplingData": {
      "type": "object",
      "properties": {
        "coupling_strength": {
          "type": "number"
        },
        "developer1": {
          "type": "string"
        },
        "developer2": {
          "type": "string"
        },
        "shared_file_changes": {
          "type": "integer"
        }
      },
      "required": [
        "developer1",
        "developer2",
        "shared_file_changes",
        "coupling_strength"
      ]
    },
    "FileCouplingData": {
      "type": "object",
      "properties": {
        "co_changes": {
          "type": "integer"
        },
        "coupling_strength": {
          "type": "number"
        },
        "file1": {
          "type": "string"
        },
        "file2": {
          "type": "string"
        }
      },
      "required": [
        "file1",
        "file2",
        "co_changes",
        "coupling_strength"
      ]
    },
    "FileOwnershipData": {
      "type": "object",
      "properties": {
        "contributors": {
          "type": "integer"
        },
        "file": {
          "type": "string"
        },
        "lines": {
          "type": "integer"
        },
        "top_contributor": {
          "type": "string"
        }
      },
      "required": [
        "file",
        "lines",
        "contributors"
      ]
    }
  }
}