{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Cohesion Analyzer Output",
  "description": "JSON schema for the cohesion analyzer ComputedMetrics output",
  "type": "object",
  "properties": {
    "aggregate": {
      "$ref": "#/definitions/AggregateData"
    },
    "distribution": {
      "$ref": "#/definitions/DistributionData"
    },
    "function_cohesion": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/FunctionCohesionData"
      }
    },
    "low_cohesion_functions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LowCohesionFunctionData"
      }
    }
  },
  "required": [
    "function_cohesion",
    "distribution",
    "low_cohesion_functions",
    "aggregate"
  ],
  "definitions": {
    "AggregateData": {
      "type": "object",
      "properties": {
        "cohesion_score": {
          "type": "number"
        },
        "function_cohesion": {
          "type": "number"
        },
        "health_score": {
          "type": "number"
        },
        "lcom": {
          "type": "number"
        },
        "message": {
          "type": "string"
        },
        "total_functions": {
          "type": "integer"
        }
      },
      "required": [
        "total_functions",
        "lcom",
        "cohesion_score",
        "function_cohesion",
        "health_score",
        "message"
      ]
    },
    "DistributionData": {
      "type": "object",
      "properties": {
        "excellent": {
          "type": "integer"
        },
        "fair": {
          "type": "integer"
        },
        "good": {
          "type": "integer"
        },
        "poor": {
          "type": "integer"
        }
      },
      "required": [
        "excellent",
        "good",
        "fair",
        "poor"
      ]
    },
    "FunctionCohesionData": {
      "type": "object",
      "properties": {
        "cohesion": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "quality_level": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "cohesion",
        "quality_level"
      ]
    },
    "LowCohesionFunctionData": {
      "type": "object",
      "properties": {
        "cohesion": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "recommendation": {
          "type": "string"
        },
        "risk_level": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "cohesion",
        "risk_level",
        "recommendation"
      ]
    }
  }
}