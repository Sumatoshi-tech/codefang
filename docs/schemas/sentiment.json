{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Sentiment Analyzer Output",
  "description": "JSON schema for the sentiment analyzer ComputedMetrics output",
  "type": "object",
  "properties": {
    "aggregate": {
      "$ref": "#/definitions/AggregateData"
    },
    "low_sentiment_periods": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LowSentimentPeriodData"
      }
    },
    "time_series": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/TimeSeriesData"
      }
    },
    "trend": {
      "$ref": "#/definitions/TrendData"
    }
  },
  "required": [
    "time_series",
    "trend",
    "low_sentiment_periods",
    "aggregate"
  ],
  "definitions": {
    "AggregateData": {
      "type": "object",
      "properties": {
        "average_sentiment": {
          "type": "number"
        },
        "negative_ticks": {
          "type": "integer"
        },
        "neutral_ticks": {
          "type": "integer"
        },
        "positive_ticks": {
          "type": "integer"
        },
        "total_comments": {
          "type": "integer"
        },
        "total_commits": {
          "type": "integer"
        },
        "total_ticks": {
          "type": "integer"
        }
      },
      "required": [
        "total_ticks",
        "total_comments",
        "total_commits",
        "average_sentiment",
        "positive_ticks",
        "neutral_ticks",
        "negative_ticks"
      ]
    },
    "LowSentimentPeriodData": {
      "type": "object",
      "properties": {
        "comments": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "risk_level": {
          "type": "string"
        },
        "sentiment": {
          "type": "number"
        },
        "tick": {
          "type": "integer"
        }
      },
      "required": [
        "tick",
        "sentiment",
        "comments",
        "risk_level"
      ]
    },
    "TimeSeriesData": {
      "type": "object",
      "properties": {
        "classification": {
          "type": "string"
        },
        "comment_count": {
          "type": "integer"
        },
        "commit_count": {
          "type": "integer"
        },
        "sentiment": {
          "type": "number"
        },
        "tick": {
          "type": "integer"
        }
      },
      "required": [
        "tick",
        "sentiment",
        "comment_count",
        "commit_count",
        "classification"
      ]
    },
    "TrendData": {
      "type": "object",
      "properties": {
        "change_percent": {
          "type": "number"
        },
        "end_sentiment": {
          "type": "number"
        },
        "end_tick": {
          "type": "integer"
        },
        "start_sentiment": {
          "type": "number"
        },
        "start_tick": {
          "type": "integer"
        },
        "trend_direction": {
          "type": "string"
        }
      },
      "required": [
        "start_tick",
        "end_tick",
        "start_sentiment",
        "end_sentiment",
        "trend_direction",
        "change_percent"
      ]
    }
  }
}